<resources xmlns:tools="http://schemas.android.com/tools">

<!-- Base application theme. -->
<style name="Theme.ServerMonitor.Dark" parent="Theme.Material3.DayNight">

	<!-- Primary brand color. -->
	<item name="colorPrimary">@color/toolbar_white</item>
	<item name="colorPrimaryVariant">@color/toolbar_white</item>
	<item name="colorOnPrimary">@color/black</item>

	<!-- Secondary brand color. -->
	<item name="colorSecondary">@color/teal_200</item>
	<item name="colorSecondaryVariant">@color/teal_700</item>
	<item name="colorOnSecondary">@color/black</item>

	<!-- Status bar color. -->
	<!--<item name="android:statusBarColor">?attr/colorPrimaryVariant</item>-->

	<!-- Transparent status bar -->
	<item name="android:statusBarColor">@color/toolbar_white</item>
	<item name="android:windowLightStatusBar" tools:targetApi="m">false</item>

	<!-- Custom action bar themes -->
	<item name="actionBarTheme">@style/ThemeOverlay.ServerMonitor.ActionBar.Dark</item>
	<item name="actionBarPopupTheme">@style/ThemeOverlay.ServerMonitor.ActionBar.OverflowMenu.Dark</item>

</style>

<!-- Action bar -->
<style name="ThemeOverlay.ServerMonitor.ActionBar.Dark" parent="ThemeOverlay.Material3.Dark">

	<!-- Background -->
	<item name="colorPrimary">@color/toolbar_dark</item>
	<item name="colorAccent">@color/white</item>

	<!-- Title & subtitle -->
	<item name="colorOnSurface">@color/white</item>
	<item name="colorOnSurfaceVariant">@color/white</item>

</style>

<!-- Action bar overflow menu -->
<style name="ThemeOverlay.ServerMonitor.ActionBar.OverflowMenu.Dark" parent="ThemeOverlay.Material3.Dark">

	<!-- Icon -->
	<item name="colorPrimary">@color/toolbar_dark</item>

</style>

<style name="TextAppearance.ServerMonitor.ActionBar.Title.Dark" parent="TextAppearance.Material3.ActionBar.Title">
	<item name="android:textSize">28sp</item>
</style>

</resources>

