<resources xmlns:tools="http://schemas.android.com/tools">

	<!-- Overrides for dark theme -->
	<style name="Theme.ServerMonitor" parent="Theme.Material3.Dark">

		<!-- Text color -->
		<item name="android:textColor">@color/white</item>
		<item name="android:textColorPrimary">@color/white</item>-->

		<!-- Status bar -->
		<item name="android:statusBarColor">@color/toolbar_dark</item>
		<item name="android:windowLightStatusBar" tools:targetApi="m">false</item>

		<!-- Action bar -->
		<item name="actionBarTheme">@style/ThemeOverlay.ServerMonitor.Dark.ActionBar</item>
		<item name="actionBarPopupTheme">@style/ThemeOverlay.ServerMonitor.Dark.ActionBar.OverflowMenu</item>

		<!-- Button text color -->
		<item name="materialButtonStyle">@style/Theme.ServerMonitor.Dark.ButtonAppearance</item>

	</style>

	<!-- Action bar -->
	<style name="ThemeOverlay.ServerMonitor.Dark.ActionBar" parent="ThemeOverlay.Material3.DynamicColors.Dark">

		<!-- Background -->
		<item name="android:background">@color/toolbar_dark</item>
		<item name="colorPrimary">@color/toolbar_dark</item>
		<item name="colorSecondary">@color/toolbar_dark</item>
		<item name="colorTertiary">@color/toolbar_dark</item>
		<item name="colorAccent">@color/toolbar_dark</item>

		<!-- Title & subtitle -->
		<item name="colorOnSurface">@color/white</item>
		<item name="colorOnSurfaceVariant">@color/white</item>

	</style>

	<!-- Action bar - Overflow menu -->
	<style name="ThemeOverlay.ServerMonitor.Dark.ActionBar.OverflowMenu" parent="ThemeOverlay.Material3.DynamicColors.Dark">

		<!-- Icon -->
		<item name="colorPrimary">@color/toolbar_dark</item>

	</style>

	<!-- Button text color -->
	<style name="Theme.ServerMonitor.Dark.ButtonAppearance" parent="Widget.Material3.Button">
		<item name="android:textColor">@color/white</item>
		<item name="android:textColorPrimary">@color/white</item>
	</style>

</resources>
