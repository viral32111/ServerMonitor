<resources xmlns:tools="http://schemas.android.com/tools">

	<!-- Base -->
	<style name="Theme.ServerMonitor" parent="Theme.Material3.Light">

		<!-- Primary colors -->
		<item name="colorPrimary">@color/toolbar_white</item>
		<item name="colorPrimaryVariant">@color/toolbar_white</item>
		<item name="colorOnPrimary">@color/white</item>

		<!-- Secondary colors -->
		<item name="colorSecondary">@color/blue_400</item>
		<item name="colorSecondaryVariant">@color/blue_400</item>
		<item name="colorOnSecondary">@color/white</item>

		<!-- Status bar -->
		<item name="android:statusBarColor">@color/toolbar_white</item>
		<item name="android:windowLightStatusBar" tools:targetApi="m">true</item>

		<!-- Action bar -->
		<item name="actionBarTheme">@style/ThemeOverlay.ServerMonitor.ActionBar</item>
		<item name="actionBarPopupTheme">@style/ThemeOverlay.ServerMonitor.ActionBar.OverflowMenu</item>

	</style>

	<!-- Action bar -->
	<style name="ThemeOverlay.ServerMonitor.ActionBar" parent="ThemeOverlay.Material3.Light">

		<!-- Background -->
		<item name="colorPrimary">@color/toolbar_white</item>
		<item name="colorAccent">@color/black</item>

		<!-- Title & subtitle -->
		<item name="colorOnSurface">@color/black</item>
		<item name="colorOnSurfaceVariant">@color/black</item>

	</style>

	<!-- Action bar - Overflow menu -->
	<style name="ThemeOverlay.ServerMonitor.ActionBar.OverflowMenu" parent="ThemeOverlay.Material3.Light">

		<!-- Icon -->
		<item name="colorPrimary">@color/toolbar_white</item>

	</style>

	<!-- Action bar - Title -->
	<style name="TextAppearance.ServerMonitor.ActionBar.Title" parent="TextAppearance.Material3.ActionBar.Title">
		<item name="android:textSize">28sp</item>
	</style>

</resources>

