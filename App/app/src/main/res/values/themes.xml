<resources xmlns:tools="http://schemas.android.com/tools">

	<!-- Base -->
	<style name="Theme.ServerMonitor" parent="Theme.Material3.Light">

		<!-- Text color -->
		<item name="android:textColor">@color/black</item>-->

		<!-- https://m3.material.io/styles/color/the-color-system/key-colors-tones -->

		<!-- Primary colors -->
		<item name="colorPrimary">@color/blue_400</item>
		<item name="colorPrimaryVariant">@color/blue_400</item>
		<item name="colorOnPrimary">@color/white</item>

		<!-- Secondary colors -->
		<item name="colorSecondary">@color/blue_400</item>
		<item name="colorSecondaryVariant">@color/blue_400</item>
		<item name="colorOnSecondary">@color/white</item>

		<!-- Tertiary colors -->
		<item name="colorTertiary">@color/blue_400</item>
		<item name="colorOnTertiary">@color/white</item>

		<!-- Progress spinners, and probably other stuff -->
		<item name="colorAccent">@color/blue_400</item>

		<!-- Status bar -->
		<item name="android:statusBarColor">@color/toolbar_white</item>
		<item name="android:windowLightStatusBar">true</item>

		<!-- Action bar -->
		<item name="actionBarTheme">@style/ThemeOverlay.ServerMonitor.ActionBar</item>
		<item name="actionBarPopupTheme">@style/ThemeOverlay.ServerMonitor.ActionBar.OverflowMenu</item>

	</style>

	<!-- Action bar -->
	<style name="ThemeOverlay.ServerMonitor.ActionBar" parent="ThemeOverlay.Material3.DynamicColors.DayNight">

		<!-- Background -->
		<item name="colorPrimary">@color/toolbar_white</item>
		<item name="colorAccent">@color/black</item>

		<!-- Title & subtitle -->
		<item name="colorOnSurface">@color/black</item>
		<item name="colorOnSurfaceVariant">@color/black</item>

	</style>

	<!-- Action bar - Overflow menu -->
	<style name="ThemeOverlay.ServerMonitor.ActionBar.OverflowMenu" parent="ThemeOverlay.Material3.DynamicColors.DayNight">

		<!-- Icon -->
		<item name="colorPrimary">@color/toolbar_white</item>

	</style>

	<!-- Action bar - Title -->
	<style name="TextAppearance.ServerMonitor.ActionBar.Title" parent="TextAppearance.Material3.ActionBar.Title">
		<item name="android:textSize">28sp</item>
	</style>

</resources>
