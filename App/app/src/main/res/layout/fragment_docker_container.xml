<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:id="@+id/dockerContainerConstraintLayout"
	android:layout_width="match_parent"
	android:layout_height="wrap_content">

	<TextView
		android:id="@+id/dockerContainerNameTextView"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:drawablePadding="@dimen/serverIconPadding"
		android:ellipsize="end"
		android:singleLine="true"
		android:text="@string/serverTextViewDockerContainerName"
		android:textSize="16sp"
		app:drawableLeftCompat="@drawable/terminal"
		app:drawableTint="@color/black"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent" />

	<TextView
		android:id="@+id/dockerContainerStatusTextView"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_marginStart="8dp"
		android:drawablePadding="@dimen/serverIconPadding"
		android:ellipsize="end"
		android:gravity="start|center_vertical"
		android:singleLine="true"
		android:text="@string/serverTextViewDockerContainerStatus"
		android:textSize="12sp"
		app:drawableLeftCompat="@drawable/schedule"
		app:drawableTint="@color/black"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/dockerContainerNameTextView" />

	<TextView
		android:id="@+id/dockerContainerImageTextView"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_marginStart="8dp"
		android:drawablePadding="@dimen/serverIconPadding"
		android:ellipsize="end"
		android:gravity="start|center_vertical"
		android:singleLine="true"
		android:textSize="12sp"
		app:drawableLeftCompat="@drawable/image"
		app:drawableTint="@color/black"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/dockerContainerStatusTextView" />

</androidx.constraintlayout.widget.ConstraintLayout>
