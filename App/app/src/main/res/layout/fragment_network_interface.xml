<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:id="@+id/networkInterfaceConstraintLayout"
	android:layout_width="match_parent"
	android:layout_height="wrap_content">

	<TextView
		android:id="@+id/networkInterfaceTextView"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:drawablePadding="@dimen/serverIconPadding"
		android:text="@string/serverTextViewNetworkInterface"
		android:textSize="@dimen/text_size"
		app:drawableLeftCompat="@drawable/router"
		app:drawableTint="@color/black"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent" />

	<TextView
		android:id="@+id/networkInterfaceTransmitTextView"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_marginStart="8dp"
		android:drawablePadding="@dimen/serverIconPadding"
		android:text="@string/serverTextViewNetworkInterfaceTransmit"
		android:textSize="16sp"
		app:drawableLeftCompat="@drawable/upload"
		app:drawableTint="@color/black"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/networkInterfaceTextView" />

	<TextView
		android:id="@+id/networkInterfaceReceiveTextView"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_marginStart="8sp"
		android:drawablePadding="@dimen/serverIconPadding"
		android:text="@string/serverTextViewNetworkInterfaceReceive"
		android:textSize="16sp"
		app:drawableLeftCompat="@drawable/download"
		app:drawableTint="@color/black"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/networkInterfaceTransmitTextView" />

</androidx.constraintlayout.widget.ConstraintLayout>
