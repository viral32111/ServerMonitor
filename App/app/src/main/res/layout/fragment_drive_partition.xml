<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:id="@+id/drivePartitionFrameLayout"
	android:layout_width="match_parent"
	android:layout_height="wrap_content">

	<TextView
		android:id="@+id/drivePartitionTextView"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginStart="8dp"
		android:drawablePadding="@dimen/serverIconPadding"
		android:ellipsize="end"
		android:singleLine="true"
		android:text="@string/serverTextViewDrivesPartition"
		android:textSize="16sp"
		app:drawableLeftCompat="@drawable/hard_drive_2"
		app:drawableTint="@color/black" />

</FrameLayout>
